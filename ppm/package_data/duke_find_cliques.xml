<!--
  For more information, see
    https://github.com/larsga/Duke/wiki/

  Improvements needed:
   - some area numbers have spaces in them
   - not stripping accents from names
-->
<duke> 

  <object class="no.priv.garshol.duke.comparators.GeopositionComparator"
          name="GeoComparator">
    <param name="max-distance" value="5000"/>
  </object>
   
  <schema>
    <threshold>0.96</threshold>

    <property type="id">
      <name>ID</name>
    </property>
    <property>
      <name>NAME</name> 
      <comparator>no.priv.garshol.duke.comparators.JaroWinklerTokenized</comparator>
      <low>0.09</low>
      <high>0.99</high>
    </property>    
    <property>
      <name>ESOURCE</name> 
      <comparator>no.priv.garshol.duke.comparators.QGramComparator</comparator>
      <low>0.05</low>
      <high>0.65</high>
    </property>
    <property>
      <name>TECH</name> 
      <comparator>no.priv.garshol.duke.comparators.QGramComparator</comparator>
      <low>0.25</low>
      <high>0.51</high>
    </property>
    <property>
      <name>COUNTRY</name> 
      <comparator>no.priv.garshol.duke.comparators.QGramComparator</comparator>
      <low>0.05</low>
      <high>0.51</high>
    </property>   
    <property>
      <name>CAPACITY</name> 
      <comparator>no.priv.garshol.duke.comparators.NumericComparator</comparator>
      <low>0.49</low>
      <high>0.51</high>
    </property> 
    <property>
      <name>GEOPOS</name> 
      <comparator>GeoComparator</comparator>
      <low>0.05</low>
      <high>0.75</high>
    </property>   
  </schema>

  <database class="no.priv.garshol.duke.databases.InMemoryDatabase">
    </database>

    <csv>
      <param name="input-file" value="input.csv"/>

      <column name="projectID" property="ID"/>
      <column name="PlantName"
              property="NAME"
              cleaner="no.priv.garshol.duke.cleaners.LowerCaseNormalizeCleaner"/>
      <column name="Fueltype"
              property="ESOURCE"
              cleaner="no.priv.garshol.duke.cleaners.LowerCaseNormalizeCleaner"/>
      <column name="Technology"
              property="TECH"
              cleaner="no.priv.garshol.duke.cleaners.LowerCaseNormalizeCleaner"/>
      <column name="Country"
              property="COUNTRY"/>
      <column name="Capacity"
              property="CAPACITY"/>
      <column name="Geoposition"
              property="GEOPOS"/>
    </csv>

</duke>